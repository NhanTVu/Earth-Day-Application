<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/earthpic"
    android:gravity="center"
    tools:context="com.example.william.earthdayapplication.MainActivity"
    android:weightSum="1"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/UserInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:gravity="center"
                android:hint="@string/UserInput"
                android:textSize="35sp"
                android:paddingBottom="20dp"/>

            <Button
                android:id="@+id/SearchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="0.23"
                android:background="#c2458c"
                android:onClick="searchButton"
                android:text="@string/SearchButton"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <ImageView
                android:id="@+id/weather_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:contentDescription="@string/weatherpic"
                android:src="@drawable/na"
                android:paddingTop="15dp"
                android:paddingLeft="80dp"
                android:paddingRight="100dp"
                android:paddingBottom="15dp"/>

            <TextView
                android:id="@+id/Temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:gravity="center"
                android:text="@string/Temperature"
                android:textSize="45sp"
                android:textColor="#0d0a0c" />

            <TextView
                android:id="@+id/Condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:gravity="center"
                android:text="@string/Condition"
                android:textSize="45sp"
                android:textColor="#0d0a0c" />

            <TextView
                android:id="@+id/Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:gravity="center"
                android:text="@string/Location"
                android:textSize="45sp"
                android:textColor="#0d0a0c"
                android:paddingBottom="80dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_weight="0.23"
                android:layout_gravity="center_vertical|center_horizontal"
                app:srcCompat="@drawable/plant" />

            <Switch
                android:id="@+id/MusicSwitch"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_weight="0.23"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="Classical musical for your plants to grow"
                android:textSize="25sp"/>

            <ImageView
                android:id="@+id/yahoo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="0.23"
                android:textColor="#0d0a0c"
                android:contentDescription="@string/yahoologo"
                app:srcCompat="@drawable/yahoo" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
